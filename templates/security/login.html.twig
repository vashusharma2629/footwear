{% extends 'base.html.twig' %}
 
{% block body %}
<title>{% block title %}Login{% endblock %}</title>

			
    
<div class="container ">
        <h1 class="display-3" text-center>Login form</h1>
        </div>

        
   

<div class="row justify-content-center" >

	<div class="form login-form text-center">
    
		<form method="post">
         {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
        
			<div class="row" text-center>
				<div class="col-md-12 text-center">
					<div class="form-group text-center">
						<span class="form-label text-center">Email</span>
						<input ctype="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<span class="form-label">Password</span>
						<input type="password" name="password" id="inputPassword" class="form-control" required>
					</div>
                    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
				</div>
				
				<div class="col-md-6 text-center">
					
    <label for="Forget Password"><a href="{{url('app_forgot_password_request')}}">Reset Password</a></label>
				</div>
			</div>
			<div class="form-btn">
				<button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
			</div>
		</form>
	</div>

</div>
<div class="container text-center p-20x ">&copy; Copyright 2020, All Rights Reserved</div>
        </div>
        








</form>
{% endblock %}

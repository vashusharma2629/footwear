{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container ">
        <h1 class="display-3" text-center>Reset your password</h1>
        </div>
<div class="form login-form text-center">
    {{ form_start(resetForm) }}
    <div class="row" text-center>
				<div class="col-md-12 text-center">
					<div class="form-group text-center">
        {{ form_row(resetForm.plainPassword , {attr: {class: 'form-control', placeholder:'Enter your Email'}}) }}
       <div class="form-btn">
				<button class="btn btn-lg btn-primary" type="submit">
        Reset password
    </button>
    {{ form_end(resetForm) }}
{% endblock %}
